<assembly>
  <id>OpenClinica</id>
  <baseDirectory>OpenClinica-${project.version}</baseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
  	<fileSet>
      <directory>src/main/config/install-docs</directory>
      <outputDirectory>install-docs</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/config</directory>
      <outputDirectory>config</outputDirectory>
      <includes>
        <include>database/PostgreSQL/*/*</include>
        <include>database/Oracle/*/*</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>README.txt</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>LICENSE.txt</source>
      <outputDirectory>/</outputDirectory>
      <filtered>false</filtered>
    </file>
  	<file>
  		<source>${project.build.directory}/${project.build.finalName}.war</source>
  		<outputDirectory>distribution</outputDirectory>
  		<destName>OpenClinica.war</destName>
  	</file>
  </files>
</assembly>
