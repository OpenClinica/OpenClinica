    <bean id="dataSource" class="org.akaza.openclinica.core.ExtendedBasicDataSource">
        <property name="driverClassName" value="org.postgresql.Driver"/>
        <property name="maxTotal" value="50"/>
        <property name="maxIdle" value="2"/>
        <property name="maxWaitMillis" value="180000"/>
        <property name="removeAbandonedOnBorrow" value="true"/>
        <property name="removeAbandonedTimeout" value="300"/>
        <property name="logAbandoned" value="true"/>
        <property name="testWhileIdle" value="true"/>
        <property name="testOnReturn" value="true"/>
        <property name="timeBetweenEvictionRunsMillis" value="300000"/>
        <property name="minEvictableIdleTimeMillis" value="600000"/>
        <property name="url" value="jdbc:postgresql://localhost:5432/oc_liqui"/>
        <property name="username" value="clinica"/>
        <property name="password" value="clinica"/>
        <property name="bigStringTryClob" value="true"/>
    </bean>

    <bean id="multiSchemaDataSource" class="org.akaza.openclinica.core.ExtendedBasicDataSource">
        <property name="driverClassName" value="org.postgresql.Driver"/>
        <property name="maxTotal" value="50"/>
        <property name="maxIdle" value="2"/>
        <property name="maxWaitMillis" value="180000"/>
        <property name="removeAbandonedOnBorrow" value="true"/>
        <property name="removeAbandonedTimeout" value="300"/>
        <property name="logAbandoned" value="true"/>
        <property name="testWhileIdle" value="true"/>
        <property name="testOnReturn" value="true"/>
        <property name="timeBetweenEvictionRunsMillis" value="300000"/>
        <property name="minEvictableIdleTimeMillis" value="600000"/>
        <property name="url" value="jdbc:postgresql://localhost:5432/oc_liqui"/>
        <property name="username" value="clinica"/>
        <property name="password" value="clinica"/>
        <property name="bigStringTryClob" value="true"/>
        <property name="accessToUnderlyingConnectionAllowed" value="true"/>
    </bean>

